# Production Environment Variables
NODE_ENV=production

# Database (будет переопределено через переменные окружения платформы)
DATABASE_URL=${DATABASE_URL}

# Session Secret (будет переопределено через переменные окружения платформы)
SESSION_SECRET=${SESSION_SECRET}

# Telegram API credentials
TELEGRAM_API_ID=${TELEGRAM_API_ID}
TELEGRAM_API_HASH=${TELEGRAM_API_HASH}

# Server Configuration
PORT=${PORT:-5000}
HOST=0.0.0.0

# Logging
LOG_LEVEL=error

# Security
TRUST_PROXY=true