# База данных PostgreSQL
# Railway автоматически подставит DATABASE_URL при деплое
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/railway
PGHOST=localhost
PGPORT=5432
PGDATABASE=railway
PGUSER=postgres
PGPASSWORD=postgres

# Секретный ключ для сессий
SESSION_SECRET=railway-default-session-secret-change-this-in-production

# Telegram API credentials (получите на https://my.telegram.org)
# Эти переменные нужно настроить вручную в Railway после деплоя
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here

# Режим работы
NODE_ENV=production

# Настройки сервера
PORT=5000
HOST=0.0.0.0
TRUST_PROXY=true