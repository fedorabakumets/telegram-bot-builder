{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "declaration": false,
    "sourceMap": false,
    "outDir": "./dist/server",
    "rootDir": ".",
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmitOnError": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["client/src/*"],
      "@shared/*": [
        "./shared/*"
      ],
      "@assets/*": ["attached_assets/*"]
    }
  },
  "include": [
    "server/**/*",
    "shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "client"
  ]
}